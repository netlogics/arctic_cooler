<p id="notice"><%= notice %></p>

<h1>Fans</h1>

<table>
  <thead>
    <tr>
      <th>Blade</th>
      <th>Motor</th>
      <th>Location</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fans.each do |fan| %>
      <tr>
        <td><%= fan.blade.id %></td>
        <td><%= fan.motor.id %></td>
        <td><%= fan.location.grid.name %></td>
        <td><%= fan.state %></td>
        <td><%= link_to 'Show', fan %></td>
        <td><%= link_to 'Edit', edit_fan_path(fan) %></td>
        <td><%= link_to 'Destroy', fan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

